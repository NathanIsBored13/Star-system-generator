<Window x:Class="Starsysem_generator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Starsysem_generator"
        mc:Ignorable="d"
        Title="MainWindow"
        
        Background="Gray"
        Width="600"
        Height="600">
    <Grid>
        <StackPanel Margin="10" Orientation="Horizontal">
            <Viewbox Margin="0, 0, 5, 0" Width="600" Height="600" >
                <Viewport3D x:Name="Canvas"/>
            </Viewbox>
            <StackPanel Margin="5, 0, 0, 0" Background="DimGray">
                <Label FontWeight="ExtraBold" FontSize="20" Content="Starsystem Generator"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
